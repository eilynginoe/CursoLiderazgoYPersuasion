<script is:inline>
  document.addEventListener("DOMContentLoaded", () => {
    const body = document.body;
    const numero = `${numero}`; // üîÅ esto inserta el n√∫mero real al generar el HTML

    // Abrir modal
    document.querySelectorAll("[data-modal-open]").forEach((trigger) => {
      trigger.addEventListener("click", () => {
        const id = trigger.getAttribute("data-modal-open");
        const modal = document.querySelector(`[data-modal-id="${id}"]`);
        if (modal) {
          modal.style.display = "flex";
          body.classList.add("modal-open"); // bloquear fondo
        }
      });
    });

    // Cerrar modal por bot√≥n o click fuera
    document.querySelectorAll("[data-modal-close]").forEach((btn) => {
      btn.addEventListener("click", () => {
        const modal = btn.closest(".modal");
        if (modal) {
          modal.style.display = "none";
          body.classList.remove("modal-open"); // liberar fondo
        }
      });
    });

    // Cerrar si se hace clic fuera del contenido
    document.querySelectorAll(".modal").forEach((modal) => {
      modal.addEventListener("click", (e) => {
        if (e.target === modal) {
          modal.style.display = "none";
          body.classList.remove("modal-open");
        }
      });
    });

    // WhatsApp con texto din√°mico
    document.querySelectorAll(".inscribirme").forEach((btn) => {
      btn.addEventListener("click", (event) => {
        event.preventDefault();
        const mensaje =
          btn.getAttribute("data-wa-text") ||
          "Hola, me interesa recibir m√°s informaci√≥n.";
        const url = `https://wa.me/${numero}?text=${encodeURIComponent(mensaje)}`;
        window.open(url, "_blank");
      });
    });
  });
</script>

